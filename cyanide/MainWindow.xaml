<Window x:Class="cyanide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cyanide"
        mc:Ignorable="d"
        Title="Cyanide" Height="450" Width="800" WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="28"/>
    </WindowChrome.WindowChrome>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#2D2D30" Padding="10,0">
            <MenuItem Header="_File" Margin="1,0" Padding="9,0" Height="32" WindowChrome.IsHitTestVisibleInChrome="True" Foreground="White">
                <MenuItem Header="_Open" Background="#2D2D30" Width="40"/>
                <MenuItem Header="_Close" Background="#2D2D30"/>
                <MenuItem Header="_Save" Background="#2D2D30"/>
            </MenuItem>
            <MenuItem Header="_Edit" Margin="1,0" Padding="9,0" WindowChrome.IsHitTestVisibleInChrome="True" Foreground="White">
                <MenuItem Header="_Cut" Background="#2D2D30" Width="40"/>
                <MenuItem Header="_Copy" Background="#2D2D30"/>
                <MenuItem Header="_Paste" Background="#2D2D30"/>
            </MenuItem>
        </Menu>
        <StackPanel/>
    </DockPanel>
</Window>
